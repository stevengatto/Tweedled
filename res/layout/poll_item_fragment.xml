<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/custom_poll_item_fragment"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:background="#28544B"
                android:clickable="true">

    <TextView android:id="@+id/tv_poll_main_title_fragment"
              android:layout_width="match_parent"
              android:layout_height="40dp"
              android:gravity="center"
              android:textSize="35dp"
              android:layout_marginTop="10dp"
              android:text="Main title"/>


    <LinearLayout android:id="@+id/poll_item_lin_lay_frag"
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:padding="20dp"
                  android:layout_below="@id/tv_poll_main_title_fragment">

        <RelativeLayout android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#ACBD86"
                        android:layout_marginRight="10dp"
                        android:padding="10dp">

            <TextView android:id="@+id/tv_poll_left_title_fragment"
                      android:layout_width="match_parent"
                      android:layout_height="40dp"
                      android:layout_alignParentTop="true"
                      android:textColor="#012530"
                      android:textSize="30sp"
                      android:gravity="center"
                      android:layout_marginBottom="10dp"
                      android:text="Title 1"/>

            <moms.app.android.PollImageView
                    android:id="@+id/iv_poll_left_fragment"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_below="@id/tv_poll_left_title_fragment"
                    android:layout_marginBottom="10dp"
                    android:scaleType="centerCrop"
                    android:clickable="false"
                    android:background="#FFD6A0"/>

            <TextView android:id="@+id/tv_poll_left_votes_fragment"
                      android:layout_width="30dp"
                      android:layout_height="20dp"
                      android:layout_below="@id/iv_poll_left_fragment"
                      android:layout_alignParentLeft="true"
                      android:text="0"
                      android:textColor="#012530"/>

        </RelativeLayout>

        <RelativeLayout android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#ACBD86"
                        android:layout_marginLeft="10dp"
                        android:padding="10dp">

            <TextView android:id="@+id/tv_poll_right_title_fragment"
                      android:layout_width="match_parent"
                      android:layout_height="40dp"
                      android:layout_alignParentTop="true"
                      android:textColor="#012530"
                      android:textSize="30sp"
                      android:gravity="center"
                      android:layout_marginBottom="10dp"
                      android:text="Title 2"/>

            <moms.app.android.PollImageView
                    android:id="@+id/iv_poll_right_fragment"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_below="@id/tv_poll_right_title_fragment"
                    android:layout_marginBottom="10dp"
                    android:scaleType="centerCrop"
                    android:clickable="false"
                    android:background="#FFD6A0"/>

            <TextView android:id="@+id/tv_poll_right_votes_fragment"
                      android:layout_width="30dp"
                      android:layout_height="20dp"
                      android:layout_below="@id/iv_poll_right_fragment"
                      android:layout_alignParentLeft="true"
                      android:text="0"
                      android:textColor="#012530"/>

        </RelativeLayout>

    </LinearLayout>

    <TextView android:layout_width="fill_parent"
              android:layout_height="200dp"
              android:layout_below="@id/poll_item_lin_lay_frag"
              android:text="summary goes here"
              android:layout_margin="10dp"
              android:textColor="#000000"
              android:background="#FFD6A0"/>

</RelativeLayout>